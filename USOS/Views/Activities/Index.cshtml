@model USOS.Models.Activities.ActivityIndexModel

<script src="~/js/bootstrap.js"></script>

<div id="container">
    <div id="content">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Type</th>
                    <th>Group</th>
                    <th>Subject</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var activity in Model.Activities)
                {
                    <tr>
                        <td>@activity.Id</td>
                        <td>@activity.Type</td>
                        <td>@activity.Group</td>
                        <td>
                            <a asp-controller="Subjects" asp-action="Detail" asp-route-id="@activity.Subject.Id">@activity.Subject.Name</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>