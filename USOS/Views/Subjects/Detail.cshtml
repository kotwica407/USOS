@model USOS.Models.Subjects.SubjectDetailModel

<div class="container">
    <div class="clearfix">
        <h2 class="text-muted">View Subject</h2>
    </div>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4">
            <p id="Name">@Model.Name</p>
        </div>
        <div class="col-md-4">
            <h3>Activities</h3>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Type</th>
                        <th>Group</th>
                        <th>Teacher</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var activity in Model.Activities)
                    {
                    <tr>
                        <th scope="row">
                            <a asp-controller="Activities" asp-action="Detail" asp-route-id="@activity.Id">@activity.Id</a>
                        </th>
                        <td>@activity.Type</td>
                        <td>@activity.Group</td>
                        <td>@activity.Teacher.FirstName @activity.Teacher.LastName</td>
                    </tr>
                    }
                </tbody>
            </table>
                <p
        </div>
    </div>
</div>
