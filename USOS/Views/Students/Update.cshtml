<link href="~/css/bootstrap.css" rel="stylesheet" />
<script src="~/js/bootstrap.js"></script>
@model USOSData.Models.Student

<div>
    <form method="post" asp-controller="Students" asp-action="UpdateStudent">
        <div class="form-group">
            <label for="InputFirstName" class="col-sm-2">First Name</label>
            <div class="col-sm-10">
                <input asp-for="FirstName" value="@Model.FirstName"/>
            </div>
        </div>
        <div class="form-group">
            <label for="InputLastName" class="col-sm-2">Last Name</label>
            <div class="col-sm-10">
                <input asp-for="LastName" value="@Model.LastName"/>
            </div>
        </div>
        <div class="form-group">
            <label for="InputAddress" class="col-sm-2">Address</label>
            <div class="col-sm-10">
                <input asp-for="Address" value="@Model.Address"/>
            </div>
        </div>
        <div class="form-group">
            <label for="InputEmail" class="col-sm-2">Email</label>
            <div class="col-sm-10">
                <input type="email" asp-for="Email" value="@Model.Email"/>
            </div>
        </div>
        <div class="form-group">
            <label for="InputLogin" class="col-sm-2">Login</label>
            <div class="col-sm-10">
                <input asp-for="Login" value="@Model.Login"/>
            </div>
        </div>
        <div class="form-group">
            <label for="InputPassword" class="col-sm-2">Password</label>
            <div class="col-sm-10">
                <input type="password" asp-for="Password" value="@Model.Password"/>
            </div>
        </div>
        <div class="form-group">
            <label for="InputPesel" class="col-sm-2">Pesel</label>
            <div class="col-sm-10">
                <input asp-for="Pesel" value="@Model.Pesel" />
            </div>
        </div>
        <div class="form-group">
            <label for="InputIndexNumber" class="col-sm-2">Index Number</label>
            <div class="col-sm-10">
                <input asp-for="IndexNumber" value="@Model.IndexNumber"/>
            </div>
        </div>
        <div class="form-group">
            <label for="InputTelephoneNumber" class="col-sm-2">Telephone Number</label>
            <div class="col-sm-10">
                <input asp-for="TelephoneNumber" value="@Model.TelephoneNumber"/>
            </div>
        </div>
        <div>
            <input type="submit" class="btn" value="Update" />
            <input type="hidden" asp-for="Id" />
        </div>
    </form>
</div>