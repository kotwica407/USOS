<link href="~/css/style.css" rel="stylesheet" />
<script src="~/js/bootstrap.js"></script>
@model USOSData.Models.Student

<div id="container">
    <div id="createuser">
        <form method="post" asp-controller="Students" asp-action="CreateStudent">
            <div class="row">
                <div class="col-25">
                    <label for="InputFirstName">First Name</label>
                </div>
                <div class="col-75">
                    <input asp-for="FirstName" />
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="InputLastName">Last Name</label>
                </div>
                <div class="col-75">
                    <input asp-for="LastName" />
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="InputAddress">Address</label>
                </div>
                <div class="col-75">
                    <input asp-for="Address" />
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="InputEmail">Email</label>
                </div>
                <div class="col-75">
                    <input type="email" asp-for="Email" />
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="InputLogin">Login</label>
                </div>
                <div class="col-75">
                    <input asp-for="Login" />
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="InputPassword">Password</label>
                </div>
                <div class="col-75">
                    <input type="password" asp-for="Password" />
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="InputPesel">Pesel</label>
                </div>
                <div class="col-75">
                    <input type="text" asp-for="Pesel" />
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="InputIndexNumber">Index Number</label>
                </div>
                <div class="col-75">
                    <input type="text" asp-for="IndexNumber" />
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="InputTelephoneNumber">Telephone Number</label>
                </div>
                <div class="col-75">
                    <input asp-for="TelephoneNumber" />
                </div>
            </div>
            <div class="row">
                <input type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>