<link href="~/css/bootstrap.css" rel="stylesheet" />
<script src="~/js/bootstrap.js"></script>
@model USOSData.Models.Teacher

<div>
        <form method="post" asp-controller="Teachers" asp-action="CreateTeacher">
            <div class="form-group">
                <label for="InputFirstName" class="col-sm-2">First Name</label>
                <div class="col-sm-10">
                    <input asp-for="FirstName" />
                </div>
            </div>
            <div class="form-group">
                <label for="InputLastName" class="col-sm-2">Last Name</label>
                <div class="col-sm-10">
                    <input asp-for="LastName" />
                </div>
            </div>
            <div class="form-group">
                <label for="InputAddress" class="col-sm-2">Address</label>
                <div class="col-sm-10">
                    <input asp-for="Address" />
                </div>
            </div>
            <div class="form-group">
                <label for="InputEmail" class="col-sm-2">Email</label>
                <div class="col-sm-10">
                    <input type="email" asp-for="Email" />
                </div>
            </div>
            <div class="form-group">
                <label for="InputLogin" class="col-sm-2">Login</label>
                <div class="col-sm-10">
                    <input asp-for="Login" />
                </div>
            </div>
            <div class="form-group">
                <label for="InputPassword" class="col-sm-2">Password</label>
                <div class="col-sm-10">
                    <input type="password" asp-for="Password" />
                </div>
            </div>
            <div class="form-group">
                <input asp-for="Pesel" />
                <label for="InputPesel" class="col-sm-2">Pesel</label>
                <div class="col-sm-10">
                </div>
            </div>
            <div class="form-group">
                <label for="InputTelephoneNumber" class="col-sm-2">Telephone Number</label>
                <div class="col-sm-10">
                    <input asp-for="TelephoneNumber" />
                </div>
            </div>
            <div>
                <input type="submit" class="btn" value="Create" />
            </div>
        </form>
</div>